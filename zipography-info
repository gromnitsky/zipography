#!/usr/bin/env ruby

require_relative './lib'
include Zipography

z = MyZip.new ARGV[0]
blob = z.blob

puts "Payload size:    #{blob[:header][:len]}"
puts "Adler32:         0x" + blob[:header][:checksum].to_i.to_s(16)
puts "Version:         #{blob[:header][:version]}"
puts "Valid:           #{z.payload_valid?(blob)}"
